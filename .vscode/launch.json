{
	// 使用 IntelliSense 了解相关属性。
	// 悬停以查看现有属性的描述。
	// 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${cwd}/src/app.py",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"justMyCode": true
		},

		{
			"name": "Python: Flask",
			"type": "python",
			"request": "launch",
			"module": "flask",
			"env": { "FLASK_APP": "./src/app.py", "FLASK_DEBUG": "1" },
			"args": ["run"],
			"jinja": true,
			"justMyCode": true,
			"autoReload": {
				"enable": true,
				"include": ["**/*.py", "**/*.pyw"]
			}
		},
		{
			"name": "Attach to Chrome",
			"port": 9222,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "Flask And Javascript",
			"configurations": ["Python: Flask", "Attach to Chrome"]
		}
	]
}
